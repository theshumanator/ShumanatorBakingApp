<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="@dimen/widget_margin"
android:id="@+id/ll_widget_list"
android:background="@android:color/white" >

    <TextView
        android:id="@+id/tv_widget_text"
        style="@style/GeneralLargeTextStyle"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/widget_ingredient_border" />

    <!-- ListView to be shown on widget-->
    <ListView
        android:id="@+id/lv_widget_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>